<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>OrderPage</servlet-name>
        <servlet-class>servlets.OrderPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeOrder</servlet-name>
        <servlet-class>servlets.MakeOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exit</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderPage</servlet-name>
        <url-pattern>/OrderPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeOrder</servlet-name>
        <url-pattern>/MakeOrder</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/login</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/auth/auth.jsp</form-login-page>
            <form-error-page>/auth/auth-error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <servlet>
        <servlet-name>ProductPageServlet</servlet-name>
        <servlet-class>servlets.ProductPageServlet</servlet-class>
        <init-param>
            <param-name>act</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>servlets.Cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>exit</servlet-name>
        <servlet-class>servlets.exit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
